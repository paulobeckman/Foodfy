{% extends "../layout.njk" %}

{% block filter %}
    <form action="/search" method="GET">
        <input 
            type="text"
            name="filter"
            placeholder= "Buscar por receitas"
            value={{filter}}
        >
        <button class="filter_search" type="submit">Buscar</button>
    </form>
{% endblock %}

{% block content %}
    <div class="banner">
        <section>
            <div class="bannerContainer">
                <h1>As melhores receitas</h1>
                <p>Aprenda a construir os melhores pratos com 
                receitas criadas por profissionais do 
                mundo inteiro.
            </div>
            </p>
        </section>
        <section>
            <img src="assets/chef.png" alt="imagem do chefe">
        </section>
    </div>
{% endblock %}