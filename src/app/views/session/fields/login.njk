<div class="item">
    <div>Email</div>
    <div class="input">
        {% if error %}
            <input 
                class= "error"
                type="email"
                name="email"
                placeholder="Digite seu Email"
                value="{{user.email}}"
                onblur="Validate.apply(this, 'isEmail')"
            >
        {%else%}
            <input 
                type="email"
                name="email"
                placeholder="Digite seu Email"
                value="{{user.email}}"
                onblur="Validate.apply(this, 'isEmail')"
            >
        {% endif %}
    </div>
</div>

<div class="item">
    <div>Senha</div>
