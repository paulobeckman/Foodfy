{% extends './layout.njk'%}

{% block head %}
    <title>Foodfy | Login</title>
{% endblock %}

{%block content%}
    <form method="POST" action= "/users/forgot-password">
        <div class="header">
            <h3>Esqueceu a senha?</h3>
        </div>

        <div class="item">
            <div>Email</div>
            <div class="input">
                <input 
                    type="email"
                    name="email"
                    placeholder="Digite seu email para recuperar sua senha"
                    value="{{user.email}}"
                    onblur="Validate.apply(this, 'isEmail')"
                >
            </div>
        </div>      

        <div class="footer right">        
            <button type="submit" class="admin_button">Recuperar</button>
        </div>
    </form>
{%endblock%}