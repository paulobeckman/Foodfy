{% extends '../layout.njk'%}

{% block head %}
    <title>Foodfy | Administrador</title>
{% endblock %}

{% block content %}
    <div class="cards_recipes admin">
        <div class="header_page">
            <h1>Gerenciar receitas</h1>
            <a href="recipes/create" class="admin_button users">Novo</a>
        </div>

        <div class="cards">
            {%for recipe in recipes%}
                <div class="card">
                    <section>
                        <div class="card_img">
                            <img src="{{recipe.src}}" alt="imagem chef">
                        </div>
                    </section>
                    <section>
                        <h2>{{recipe.title}}</h2>
                        <p>por {{recipe.chef_name}}</p>
                        <a href="recipes/{{recipe.id}}">Visualizar</a>
                    </section>
                </div>
            {%endfor%}
        </div>
    </div>
{% endblock %}

