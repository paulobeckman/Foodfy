{% extends '../layout.njk'%}

{% block head %}
    <title>Foodfy | Receita | Administrador</title>
{% endblock %}

{% block content %}
    <div class="header_page">
            <h1>Editando Receita</h1>
            <div class="buttons">
                {%if loggedUser === true%}
                    <button type="submit" form="form-recipes-delete" class="admin_button delete">Deletar</button>
                {%endif%}
                <button type="submit" form="form-recipes-edit" id="create">Salvar Receita</button>
            </div>
    </div>

    <form id="form-recipes-delete" method="POST" action="/admin/recipes?_method=DELETE">
        <input 
            type="hidden"
            name="id"
            value={{recipe.id}}
        >
    </form>

    <form id="form-recipes-edit" method="POST" action="/admin/recipes?_method=PUT" enctype="multipart/form-data">
        {% include 'admin/recipes/fields.njk' %}

        <input 
            type="hidden"
            name="id"
            value={{recipe.id}}
        >
    </form>
{% endblock %}
