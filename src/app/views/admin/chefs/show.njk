{% extends '../layout.njk'%}

{% block head %}
    <title>Foodfy | Chef | Administrador</title>
{% endblock %}

{% block content %}
    <div class="header_page">
        <h1>Chef: {{chef.name}}</h1>

        <a href="{{chef.id}}/edit" class="admin_button">Editar chef</a>
    </div>

    <div class="page_information chef">
        <img src="{{chef.src}}" alt="{{chef.name}}">
        <h2>{{chef.name}}</h2>
        <p>{{chef.total_recipes}} receitas</p>
    </div>

    <div class="cards_recipes admin">
        <h1>Receitas</h1>

        <div class="cards">
            {%for recipe in recipes%}
                <div class="card">
                    <section>
                        <div class="card_img">
                            <img src="{{recipe.src}}" alt="imagem chef">
                        </div>
                    </section>
                    <section>
                        <h2>{{recipe.title}}</h2>
                        <p>{{chef.name}}</p>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </section>
                </div>
            {%endfor%}
        </div>
    </div>
    
{% endblock %}