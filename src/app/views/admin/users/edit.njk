{% extends '../layout.njk' %}

{% block content %}

    <div class="header_page">
        <h1>Atualizar Usu√°rio</h1>

        <div class="buttons">
            <button type="submit" form="form-recipes-delete" class="admin_button users delete">Deletar</button>
            <button type="submit" form="form-recipes-edit" class="admin_button users">Salvar</button>
        </div>
    </div>

    <form id="form-recipes-delete" method="POST" action="/admin/users/{{user.id}}?_method=DELETE">
        <input 
            type="hidden"
            name="id"
            value={{user.id}}
        >
    </form>

    <form id="form-recipes-edit" method="POST" action="/admin/users/{{user.id}}?_method=PUT">
        <div class="form_grid">
            {% include 'admin/users/fields.njk' %}
        </div>

        <input 
            type="hidden"
            name="id"
            value={{user.id}}
        >

        <div class="checkbox">
            <input type="checkbox" id="admin" name="admin">
            <label for="admin">Administrador</label>
        </div>
    </form>

    {% include './formDelete.njk'%}
{% endblock %}