{% extends '../../layout.njk'%}

{%block content%}
    <div class="alert-message error">
        <div class="error-lottie"></div>
        <h1>Desculpe</h1>
        <h1>Não foi possível deletar esse(a) usuário(a)</h1>

        <a class="admin_button_secondary" href="#" onclick="history.back()">Tentar novamente</a>
    </div>

    <script src="/lottie.min.js"></script>
    <script>
        const  element = document.querySelector('.error-lottie')

        lottie.loadAnimation({
            container: element, // the dom element that will contain the animation
            renderer: 'svg',
            loop: false,
            autoplay: true,
            path: '/58413-delete-icon-animation.json' // the path to the animation json
        });
    </script>
{%endblock%}